{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "ASPNETCORE_ENVIRONMENT": {
            "type": "string",
            "defaultValue": "development"
        },
        "servicePlan": {
            "type": "string"
        },
        "alwaysOn": {
            "type": "bool",
            "defaultValue": false
        }

    },
    "functions": [],
    "variables": {
        "appName":"sean-phillips-demo",
        "instances": ["alpha","beta","charlie","delta"]
    },
    "resources": [

        {
            "name": "[concat(variables('appName'),'-',variables('instances')[copyIndex()])]",
            "type": "Microsoft.Web/sites",
            "apiVersion": "2018-11-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [],
            "copy": {
                "name": "websitescopy",
                "count": "[length(variables('instances'))]"
            },
            "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('servicePlan'))]",
                "siteConfig": {
                    "alwaysOn": "[parameters('alwaysOn')]"
                }
            }

        },
        {
            "name": "[concat(variables('appName'),'-',variables('instances')[copyIndex()])]",
            "type": "Microsoft.Web/sites/config",
            "apiVersion": "2018-11-01",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', concat(variables('appName'),'-',variables('instances')[copyIndex()]))]"
            ],
            "copy": {
                "name": "appsettingscopy",
                "count": "[length(variables('instances'))]"
            },
            "properties": {
                "ASPNETCORE_ENVIRONMENT": "[parameters('ASPNETCORE_ENVIRONMENT')]",
            }

        }
        
    ],
    "outputs": {}
}